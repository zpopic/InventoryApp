@model InventoryApp.Models.Tip

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Tip</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UsrChanged" value="@User.Identity.Name" />
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VrstaId" class="control-label"></label> 
                <select id="vrst" class="form-control" asp-for="VrstaId" asp-items="ViewBag.VrstaId"> </select><!-- ovdje asp-items ne treba jer to rješava skripta-->
            </div>
            <div class="form-group">
                <label asp-for="KategorijaId" class="control-label"></label>
                <select id="kat" asp-for="KategorijaId" class="form-control" asp-items="ViewBag.KategorijaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>




<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}
      

